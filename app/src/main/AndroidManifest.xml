<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ce.fittrack">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".WelcomeScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity android:name=".Menu">
            <intent-filter>
                <action android:name="android.intent.action.MENU" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FitList"
            android:label="@string/title_activity_fit_list"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ce.fittrack.Menu" />

            <intent-filter>
                <action android:name="android.intent.action.FITLIST" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SQLView"
            android:label="@string/title_activity_sqlview"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.SQLVIEW" />
            </intent-filter>
        </activity>
        <activity
            android:name=".test"
            android:label="@string/title_activity_test"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ActivityDetails"
            android:label="@string/title_activity_activity_details"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <intent-filter>
            <action android:name="android.intent.action.ACTIVITYDETAILS" />
        </intent-filter>
    </application>

</manifest>
