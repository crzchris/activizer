<resources xmlns:android="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorPrimaryDark">@color/primary_900</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="CodeFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#00FF00</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="Button_prim_sec" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/primary_500</item>
        <item name="android:textColor">@color/secondary_800</item>
        <item name="android:background">@color/primary_500</item>
    </style>

    <style name="Button_sec_prim" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/secondary_200</item>
        <item name="android:textColor">@color/primary_800</item>
        <item name="android:background">@color/secondary_200</item>
    </style>

    <style name="ListView_sec" parent="@android:style/Widget.ListView">
        <item name="android:background">@color/secondary_200</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

</resources>
