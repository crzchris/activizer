<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ScreenEventDetails"
    tools:showIn="@layout/activity_event_details">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_eventD_1">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_eventDetails_event_name"
            android:layout_alignParentStart="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_alignParentTop="true"
            android:text="Activity: " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="ActivityName"
            android:id="@+id/tv_eventDetails_event_name"
            android:background="?attr/editTextBackground"
            android:layout_toEndOf="@+id/et_eventDetails_event_name"

            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_eventDetails_1"
        android:id="@+id/rl_eventDetails_2">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_eventDetails_event_st"
            android:layout_alignParentStart="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_alignParentTop="true"
            android:text="StartTime: " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="yyyy/mm/dd hh:mm"
            android:id="@+id/tv_eventDetails_event_st"
            android:background="?attr/editTextBackground"
            android:layout_toEndOf="@+id/et_eventDetails_event_st"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_eventDetails_2"
        android:id="@+id/rl_eventDetails_3">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_eventDetails_event_et"
            android:layout_alignParentStart="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_alignParentTop="true"
            android:text="EndTime: " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="yyyy/mm/dd hh:mm"
            android:id="@+id/tv_eventDetails_event_et"
            android:background="?attr/editTextBackground"
            android:layout_toEndOf="@+id/et_eventDetails_event_et"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_eventDetails_3"
        android:id="@+id/rl_eventDetails_4">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_eventDetails_event_loc"
            android:layout_alignParentStart="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_alignParentTop="true"
            android:text="Location: " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Where"
            android:id="@+id/tv_eventDetails_event_loc"
            android:background="?attr/editTextBackground"
            android:layout_toEndOf="@+id/et_eventDetails_event_loc"
            />

    </RelativeLayout>




    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_eventDetails_participants"
        android:text="Participants"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/rl_eventDetails_4"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/lv_eventDetails_participants"
        android:layout_below="@+id/et_eventDetails_participants"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_eventDetails_comments"
        android:layout_below="@+id/lv_eventDetails_participants"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:text="Comments" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/lv_eventDetails_comments"
        android:layout_below="@+id/et_eventDetails_comments"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom = "true"/>


</RelativeLayout>
