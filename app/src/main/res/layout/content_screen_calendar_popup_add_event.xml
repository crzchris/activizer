<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--<TextView-->
            <!--android:id="@+id/tv_calendar_add_event_text_activity"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="?attr/editTextBackground"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:text="activity"/>-->

        <Spinner
            android:id="@+id/sp_calendar_add_event_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d9e6ee"
            android:popupBackground="#d9e6ee"/>

    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date (YYYY-MM-DD)"
        android:inputType="date"
        android:id="@+id/et_calendar_add_event_date" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Start Time"
        android:inputType="time"
        android:id="@+id/et_calendar_add_event_start_time" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="End time (optional)"
        android:inputType="time"
        android:id="@+id/et_calendar_add_event_end_time"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Location (optional)"
        android:inputType="text"
        android:id="@+id/et_calendar_add_event_location" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/editTextBackground"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Public event"/>

        <CheckBox
            android:id="@+id/cb_calendar_add_event_ispublic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/editTextBackground"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Send invites"/>

        <Button
            android:id="@+id/btn_calendar_add_event_invite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add recipients"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</LinearLayout>